@{
    ViewData["Title"] = "Home Page";
   
}

@model List<Bowler>


    



            <div class="col-3">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <br />
                @foreach (Team t in ViewBag.teams)
                {
                    <a asp-controller="Home" asp-action="Index" asp-route-TeamName="@t.TeamName">@t.TeamName</a>
                    @*<button>@t.TeamName</button>*@
                    <br />
                }
            </div>

            <ul>
                @foreach (var b in Model)
                {

                    <div class="card text-left col-9">
                        <div class="card-body">
                            <h5 class="card-title">@b.BowlerLastName, @b.BowlerFirstName @b.BowlerMiddleInit </h5>
                            <p class="card-text">@b.BowlerAddress @b.BowlerCity, @b.BowlerState @b.BowlerZip</p>
                            <p class="card-text">@b.BowlerPhoneNumber</p>
                            @*<a href="#" class="btn btn-primary">Go somewhere</a>*@

                            <div class="text-right">
                                <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID">Edit</a></td>
                                <br />
                                <td><a asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID">Delete</a></td>

                            </div>

                        </div>

                    </div>
                }
            </ul>
        </div>









